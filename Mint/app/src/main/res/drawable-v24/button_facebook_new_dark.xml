<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <stroke android:width="1dp" android:color="#3a5998"/>
            <gradient android:startColor="#3a5998" android:endColor="#3a5998" android:angle="-90"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <stroke android:width="1dp" android:color="#3a5998"/>
            <solid android:color="#3a5998"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <stroke android:width="1dp" android:color="#3a5998"/>
            <gradient android:startColor="#3a5998" android:endColor="#3a5998" android:angle="-90"/>
        </shape>
    </item>
</selector>
