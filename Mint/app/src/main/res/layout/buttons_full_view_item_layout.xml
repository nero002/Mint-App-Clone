<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    >

    <LinearLayout
        android:id="@+id/buttnsFullViewLlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/buttnsFullViewDisplayIv"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_15"
            android:layout_height="200dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/buttnsFullViewTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"
            android:textSize="26sp" />


        <TextView
            android:id="@+id/buttnsFullViewDateTv"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/dp_15"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/buttnsFullViewDescTv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/sp_16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <ImageView
                    android:id="@+id/buttnsFullViewSelectBookMarkIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_small_bookmark"/>

                <ImageView
                    android:id="@+id/buttnsFullViewSelectedBookMarkIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_bookmark__1_"/>


                <ImageView
                    android:id="@+id/buttnsFullViewShareIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/buttnsFullViewSelectBookMarkIv"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_share__1_"/>



                <TextView
                    android:id="@+id/buttnsFullViewReadMoreTv"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@id/buttnsFullViewReadMoreIv"
                    android:text="Read Full Story"
                    android:textStyle="bold"
                    android:textColor="@color/orange"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/buttnsFullViewReadMoreIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"/>



            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>