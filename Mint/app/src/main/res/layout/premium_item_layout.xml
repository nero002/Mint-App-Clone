<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_7"
    android:layout_height="120dp">


    <RelativeLayout

        android:id="@+id/RlPremiumContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/premiumNewsIv"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_60"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="fitXY" />
<TextView
    android:id="@+id/imageNameTv"
    android:layout_width="@dimen/dp_80"
    android:layout_height="@dimen/dp_20"
    android:text="Premium"
    android:layout_below="@+id/premiumNewsIv"
    android:textAlignment="center"
    android:background="@color/orange"
    android:layout_marginRight="@dimen/dp_20"
    android:layout_alignParentRight="true"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/premiumNewsSaveBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toLeftOf="@id/premiumNewsIv"
            android:src="@drawable/ic_small_bookmark" />

        <ImageView
            android:id="@+id/premiumNewsSavedBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_toLeftOf="@id/premiumNewsIv"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@drawable/ic_bookmark__1_"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/premiumNewsTv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:maxLines="3"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toLeftOf="@id/premiumNewsSaveBookmark"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/premiumNewsDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:text="15/4/2021"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_below="@+id/premiumNewsTv"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toLeftOf="@id/premiumNewsSaveBookmark"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>