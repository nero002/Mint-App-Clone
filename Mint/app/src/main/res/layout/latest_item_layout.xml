<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_7"
    android:layout_height="120dp">
    <RelativeLayout
        android:id="@+id/RlLatestContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/IvLatestNews"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_80"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="fitXY" />
        <ImageView
            android:id="@+id/latestNewsSaveBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toLeftOf="@id/IvLatestNews"
            android:src="@drawable/ic_small_bookmark" />
        <ImageView
            android:id="@+id/latestNewsSavedBookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_toLeftOf="@id/IvLatestNews"
            android:src="@drawable/ic_bookmark__1_"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/TvHeadine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"
            android:maxLines="3"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_toLeftOf="@id/latestNewsSaveBookmark"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/trendingNewsDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_16"
            android:layout_below="@+id/TvHeadine"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toLeftOf="@id/latestNewsSaveBookmark"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>