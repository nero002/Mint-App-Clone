<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/homeLlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeNewsDisplayIv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/homeNewsTitleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/homeNewsDateTv"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_margin="@dimen/dp_15"
            android:minLines="1"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/homeNewsDescTv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/sp_16" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">


                <ImageView
                    android:id="@+id/homeNewsSelectBookMarkIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_small_bookmark" />

                <ImageView
                    android:id="@+id/homeNewsSelectedBookMarkIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_bookmark__1_"
                    android:visibility="invisible" />


                <ImageView
                    android:id="@+id/homeNewsShareIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_toRightOf="@id/homeNewsSelectBookMarkIv"
                    android:src="@drawable/ic_share__1_" />


                <TextView
                    android:id="@+id/homeNewsReadMoreTv"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@id/homeNewsReadMoreIv"
                    android:text="Read Full Story"
                    android:textColor="@color/orange"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/homeNewsReadMoreIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>