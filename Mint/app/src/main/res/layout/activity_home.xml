            <Button android:id="@+id/viewClose" android:visibility="invisible" android:layout_width="wrap_content" android:layout_height="10dp" android:text="@string/close_button"/>
            <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/layoutCloseButton" android:background="@drawable/close_button_shape" android:paddingLeft="20dp" android:paddingTop="7dp" android:paddingRight="20dp" android:paddingBottom="7dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <ImageView android:layout_gravity="center" android:id="@+id/imgViewCloseCross" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="1dp" android:src="@drawable/ic_close_cross"/>
